block title
    title!= head_title

block extrajavascripts
    each script in js_resources.index_page
        script(type='text/javascript', src=script)

block extrastyles
    if (css_resources.index_page)
      each style in css_resources.index_page
          link(rel='stylesheet', href=style)

block content
    div(class="page-header")
        div(class='section-title')
            img(src!=external_config.flag_url)
            h1(class='section-header')!=external_config.value
        div(class='section-languages')
            each language in external_config.languages
                a(class='eea_download_btn') EEA content in #{language}
        div(class="section-description")!=external_config.body
            a(class="section-description--more") See the state of the environment in Austria

        div(class='section-pages')
            h3 OFFICIAL COUNTRY PAGES
            ul
                each val in external_config.external_links
                    li
                        - var values = val.split('|');
                        - var title = values[0];
                        - var link = values.length > 1 ? values[1] : values[0];
                        - var link = link.indexOf('http://') === -1 ? 'http://' + link : link;
                        a(href=link)=title
        div(class='section-topics')
        include /code/config/CaR/views/facet.jade
    div(class="page-body")
        +download_data
        .facet-view-simple
        div!= further_info
