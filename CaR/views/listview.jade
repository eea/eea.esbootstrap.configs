div(class="tileItem visualIEFloatFix")
    a(title="${title}", href="${url}", class="tileImage")
        img(alt="${title_text}",title="${title_text}",src="${thumbUrl}")
    div(class="tileContent")
        span(class="date") ${date}
        span(class="eea-tileTopics") ${topics}
        h3(class="listTileHeadline")
            a(title="${title_text}", class="state-published", href="${url}") ${title}
    p(class="tileBody")
        span(class="description") ${description}
    p(class="tileFooter")
        a(class="moreLink", href="${url}") Read more
    div(style="padding-bottom:1.0em;", class="visualClear") 
